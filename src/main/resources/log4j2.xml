<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	  <Properties>
	  	<Property name="logPath">log</Property>
	  </Properties>
      <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
          <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="RollingFile" filename="${logPath}/redcapreport.log" filepattern="${log-path}/redcapreport-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
      </Appenders>
      <Loggers>
        <Logger name="msig.toolbox.redcap.con.REDCapHttpConnector" level="all" additivity="false">
      		 <AppenderRef ref="Console"/>
      		 <AppenderRef ref="RollingFile" />
    	</Logger>
    	<Logger name="msig.toolbox.redcap.jasper.REDCapJRXMLTemplateGenerator" level="all" additivity="false">
      		 <AppenderRef ref="Console"/>
      		 <AppenderRef ref="RollingFile" />
    	</Logger>
    	<Logger name="msig.toolbox.redcap.jasper.REDCapJRXMLTemplateCompiler" level="all" additivity="false">
      		 <AppenderRef ref="Console"/>
      		 <AppenderRef ref="RollingFile" />
    	</Logger>
    	<Logger name="msig.toolbox.redcap.mail.REDCapMailClient" level="all" additivity="false">
      		<AppenderRef ref="Console"/>
      		 <AppenderRef ref="RollingFile" />
    	</Logger>
        <Root level="all">
          <AppenderRef ref="Console"/>
          <AppenderRef ref="RollingFile" />
        </Root>
      </Loggers>
    </Configuration>